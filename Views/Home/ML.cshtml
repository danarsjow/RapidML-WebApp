@{
    ViewData["Title"] = "Linear Regression Plot";
}

<h2>@ViewData["Title"]</h2>

<form id="uploadForm" enctype="multipart/form-data">
    <input type="file" name="file" accept=".xlsx" required />
    <button type="submit">Upload</button>
</form>

<div id="result"></div>

@section Scripts {
    <script>
        document.getElementById('uploadForm').onsubmit = async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const response = await fetch('/Plot/UploadFile', {
                method: 'POST',
                body: formData,
            });
            const result = await response.json();
            document.getElementById('result').innerHTML = result.success ? `<img src="${result.imagePath}" alt="Plot" />` : 'Error generating plot.';
        };
    </script>
}
